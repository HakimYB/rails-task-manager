<div class="title" >
  <h1><%= @task.title %></h1>
<div>

<p>
<input type= "checkbox" name= "task" <%=  "checked" if @task.completed %> >
<%= @task.details %>
</p>

<%= link_to "Edit task", edit_task_path(@task.id), method: :get %>
<%= link_to "All tasks", tasks_path, method: :get %>

<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
